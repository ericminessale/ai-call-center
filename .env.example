# SignalWire AI Call Center Configuration
# Copy this file to .env and fill in your values

# ======================
# SignalWire Configuration (REQUIRED)
# ======================
# Your SignalWire Space (e.g., yourspace.signalwire.com)
SIGNALWIRE_SPACE=your-space.signalwire.com

# Project ID from SignalWire Dashboard
SIGNALWIRE_PROJECT_ID=your-project-id-here

# API Token from SignalWire Dashboard
SIGNALWIRE_API_TOKEN=your-api-token-here

# Phone number for outbound calls (E.164 format)
SIGNALWIRE_PHONE_NUMBER=+1234567890

# ======================
# Database Configuration
# ======================
POSTGRES_DB=callcenter
POSTGRES_USER=ccuser
POSTGRES_PASSWORD=changeme-in-production
DATABASE_URL=postgresql://ccuser:changeme-in-production@postgres:5432/callcenter

# ======================
# Security Configuration
# ======================
# JWT Secret for authentication (generate a strong random key)
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Flask secret key
SECRET_KEY=another-random-secret-key-for-flask-sessions

# ======================
# AI Agent Authentication
# ======================
# HTTP Basic Auth for AI agent webhooks
# SignalWire will use these to authenticate webhook requests
SWML_BASIC_AUTH_USER=agent
SWML_BASIC_AUTH_PASSWORD=agent123

# ======================
# Call Fabric Configuration
# ======================
# Encryption key for storing subscriber passwords securely
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SUBSCRIBER_PASSWORD_KEY=your-generated-fernet-key-here

# OAuth settings (optional - for advanced Fabric features)
FABRIC_CLIENT_ID=your-fabric-client-id
FABRIC_CLIENT_SECRET=your-fabric-client-secret
FABRIC_REDIRECT_URI=http://localhost:3000/callback

# ======================
# Frontend Configuration
# ======================
# These VITE_ prefixed vars are used by the React frontend
VITE_API_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000
VITE_SIGNALWIRE_HOST=your-space.signalwire.com
VITE_SIGNALWIRE_PHONE_NUMBER=+1234567890

# ======================
# Application Settings
# ======================
FLASK_ENV=development

# ======================
# External Services (Optional)
# ======================
# For webhook testing with ngrok
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io

# Agent Base URL for multi-agent transfers
# This is the externally accessible URL for the AI agents server
# Used when transferring calls between AI agents
AGENT_BASE_URL=https://your-ngrok-url.ngrok.io

# ======================
# Feature Flags
# ======================
ENABLE_CALL_RECORDING=true
ENABLE_TRANSCRIPTION=true
ENABLE_AI_SUMMARY=true
ENABLE_CALLBACK_SCHEDULING=false

# ======================
# Queue Configuration
# ======================
DEFAULT_QUEUE_TIMEOUT_SECONDS=300
DEFAULT_PRIORITY=5
MAX_QUEUE_DEPTH=50

# ======================
# Agent Configuration
# ======================
AGENT_IDLE_TIMEOUT_MINUTES=10
AGENT_WRAP_UP_TIME_SECONDS=30

# ======================
# Monitoring (Optional)
# ======================
SENTRY_DSN=
DATADOG_API_KEY=
